@model IEnumerable<UserViewModel>;

<h2 class="text-center">Всички потребители</h2>
<hr />
<form>
    <div>
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="fst-italic fw-bold"><b>Име</b></th>
                <th class="fst-italic fw-bold"><b>Имейл</b></th>
            </tr>
            </thead>  
            @foreach (UserViewModel user in Model)
                {
                    <tbody>
                        <tr class="gridrow">
                           <td><a style="font-weight:bold; color:forestgreen; text-decoration:none;background-color:transparent" asp-controller="Admin" asp-action="UsersEdit" asp-route-id="@user.Id">@($"{user.FirstName} {user.LastName}")</a></td>
                           <td>@user.Email</td>
                        </tr> 
                    </tbody>   
                }
        </table>    
    </div>   
</form>