@model PersonalFileFormModel
<head>
  <!-- Add ApexCharts library -->
  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>
<div class="PFileHeader">
	<h2>Това е личното досие на @Model.Name</h2>
</div>
<hr />
<div class="salaryContainer">
	<h5>Текуща заплата:<p>@Model.Salary</p>лв.</h5>
	<h5>Брой повишения:<p>@Model.SalaryUpdates</p>пъти.</h5>
	<a class="btn btn-success" asp-controller="Admin" asp-action="ChangeSalary" asp-route-userId="@Model.userId">Смени заплатата</a>
</div>
<div id="chartContainer"></div>

<!-- JavaScript code -->
<script>
  // Generate sample data for the chart
  var salesData = [
    { month: 'January', sales: 200 },
    { month: 'February', sales: 450 },
    { month: 'March', sales: 300 },
    // Add more data for other months...
  ];

  // Prepare data for ApexCharts
  var chartData = {
    series: [{
      name: 'Sales',
      data: salesData.map(x => x.sales)
    }],
    xaxis: {
      categories: salesData.map(x => x.month)
    }
  };

  // Render the chart using ApexCharts
  var chartOptions = {
    chart: {
      type: 'bar',
      height: 350
    },
    colors: ['#008FFB'],
    series: chartData.series,
    xaxis: chartData.xaxis
  };
  var chart = new ApexCharts(document.querySelector('#chartContainer'), chartOptions);
  chart.render();
</script>